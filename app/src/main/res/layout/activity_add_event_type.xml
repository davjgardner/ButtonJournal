<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventTypeActivity">

    <EditText
        android:id="@+id/addEventTypeName"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_padding"
        android:layout_marginTop="@dimen/base_padding"
        android:hint="@string/event_name"
        android:importantForAutofill="no"
        android:inputType="textShortMessage|textCapWords"
        android:paddingStart="@dimen/base_padding"
        android:paddingEnd="@dimen/base_padding"
        app:layout_constraintEnd_toStartOf="@+id/addEventTypeCreate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addEventTypeCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/base_padding"
        android:text="@string/add_event_type_create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>